#! /usr/bin/bash

set -e

if [ -z "$1" ]; then
    echo "No TABLE_NAME argument given eg ./bin/ddb/drop cruddur-messages prod"
    exit 1
fi

TABLE_NAME=$1

if [ "$2" = "prod" ]; then
    ENDPOINT_URL=""
else
    ENDPOINT_URL="--endpoint-url=http://localhost:8000"
fi

echo "deleting table: $TABLE_NAME"

aws dynamodb delete-table ENDPOINT_URL \
    --table-name $TABLE_NAME